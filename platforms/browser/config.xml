<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.org.okonetwork.accessinmobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Accessin Mobile</name>
    <description>
        Unlock doors with just a shake of your phone with Accessin
    </description>
    <author email="support@okonetwork.org.uk" href="https://okonetwork.org.uk">
        The Oko Network
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
